<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.farmstory.mapper.NoticeMapper">

	<select id="listBoard" resultType="Notice">
		SELECT NOT_NO noticeNo ,
		NOT_TITLE noticeTitle, NOT_CONTENT noticeContent, MEM_ID memberId FROM
		NOTICE WHERE NOT_NO = #{noticeNo}
	</select>

	<insert id="insertBoard" parameterType="Notice">
		INSERT INTO NOTICE (
		NOT_TITLE, NOT_CONTENT, MEM_ID) VALUES
		(#{noticeTitle},#{noticeContent},#{memberId} )
	</insert>
	
	<resultMap type="Notice" id="boardMap">
		<id column="NOT_NO" property="noticeNo" />
		<result column="NOT_TITLE" property="noticeTitle" />
		<result column="NOT_CONTENT" property="noticeContent" />
		<result column="MEM_ID" property="memberId" />
		<result column="NOT_DATE" property="noticeDate" />
	</resultMap>
	
	<delete id="deleteBoard" parameterType="Notice">
		DELETE FROM NOTICE
		WHERE
		NOT_NO = #{noticeNo}
	</delete>
</mapper>  