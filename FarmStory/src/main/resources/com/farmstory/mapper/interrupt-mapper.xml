<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.farmstory.mapper.PlantMapper">
	
	<insert id="insertInfo" parameterType="PlantVal">
		INSERT INTO PLANT_VAL (PLV_TYPE, PLV_VAL) VALUES (#{plvType}, #{plvVal})
	</insert>
	<update id="updateInfo" parameterType="PlantVal">
		UPDATE PLANT_VAL (PLV_TYPE, PLV_VAL) PLV_VAL = #{plyVal}
		 WHERE PLV_TYPE = 4
	</update>
</mapper>  